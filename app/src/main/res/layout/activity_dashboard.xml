<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    tools:context=".activites.Dashboard">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/man_thumbnail"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"/>

                    <TextView
                        android:fontFamily="@font/dfvn_konde_black"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="Công thức nấu các món mặn"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dfvn_konde_regular"
                        android:textSize="14sp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="Dành cho người ăn thịt"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:fontFamily="@font/dfvn_konde_thin"
                        android:padding="6dp"
                        android:background="@drawable/total_count_button"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:text="Total count is 5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                    <Button
                        android:id="@+id/monMan"
                        android:onClick="ViewAll"
                        android:layout_marginTop="22dp"
                        android:backgroundTint="@color/yellow"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="View All"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/ic_vegetarian"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"/>

                    <TextView
                        android:fontFamily="@font/dfvn_konde_black"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="Công thức nấu các món chay"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dfvn_konde_regular"
                        android:textSize="14sp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="Dành cho người ăn chay"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:fontFamily="@font/dfvn_konde_thin"
                        android:padding="6dp"
                        android:background="@drawable/total_count_button"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:text="Total count is 5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                    <Button
                        android:id="@+id/monChay"
                        android:onClick="ViewAll"
                        android:layout_marginTop="22dp"
                        android:backgroundTint="@color/yellow"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="View All"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>




</LinearLayout>